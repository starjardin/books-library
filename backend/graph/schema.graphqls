# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  email: String!
  firstName: String!
  lastName: String!
}

type Book {
  id: ID!
  title: String!
  author: String!
  isbn: Int!
  availableCopies: Int!
  isBorrowed: Boolean!
  borrowedBy: User
  borrowedAt: String
  createdA: String!
  returnedAt: String
  dueDate: String
}

type Query {
  todos: [Todo!]!
  books: [Book!]!
  users: [User!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewBook {
  title: String!
  author: String!
  isbn: Int!
  availableCopies: Int!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(id: String!, input: NewTodo!): Todo!
  addBook(input: NewBook!): Book!
  borrowBook(bookID: ID!, userID: ID!): Book!
  returnBook(bookID: ID!): Book!
}
